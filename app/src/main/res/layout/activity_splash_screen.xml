<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.jaro.TylkoDlaPar.SplashScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/Tylko"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="13dp"
        android:contentDescription="@android:string/untitled"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="243dp"
        tools:layout_editor_relative="center" />

    <TextView
        android:id="@+id/Tylko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/Dla"
        android:fontFamily="@font/roboto"
        android:text="@string/tylko"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="355dp"
        tools:layout_editor_relative="center" />

    <TextView
        android:id="@+id/Dla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Par"
        android:layout_alignBottom="@+id/Par"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="159dp"
        android:contentDescription="@string/dla"
        android:fontFamily="@font/roboto"
        android:text="@string/dla"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        tools:layout_editor_relative="center" />

    <TextView
        android:id="@+id/Par"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Tylko"
        android:layout_alignBottom="@+id/Tylko"
        android:layout_marginStart="44dp"
        android:layout_toEndOf="@+id/Tylko"
        android:contentDescription="@string/par"
        android:fontFamily="@font/roboto"
        android:text="@string/par"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_relative="center" />

</RelativeLayout>
